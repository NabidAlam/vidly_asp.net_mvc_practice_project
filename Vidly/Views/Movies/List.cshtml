@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div>
    <a href="Movies/New" class="btn btn-primary">New Movie</a>
</div>

<br />

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Duration</th>
            <th>Genre</th>
            <th>In Stock?</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $('#movies').DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id",
                        render: function (data) {
                            return data;
                        }
                    },
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "duration",
                        render: function (data) {
                            return data;
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "numInStock",
                        render: function(data) {
                            return data;
                        }
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn btn-danger btn-sm js-delete' data-movie-id=" + data + "><i class='fa fa-times'></i></button>";
                        }
                    }
                ]
            });

            $('#movies').on('click', '.js-delete', function () {
                var self = $(this);

                bootbox.confirm('Are you sure you want to delete this movie?', function (result) {
                    if (result) {
                        $.ajax({
                            url: '/api/movies/' + self.attr('data-movie-id'),
                            method: 'DELETE',
                            success: function () {
                                table.row(self.parents('tr')).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>    
}

