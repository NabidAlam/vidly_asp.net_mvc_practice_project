@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class="table table-bordered table-hover">
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Discount Rate</th>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@Html.ActionLink(person.Name, "Details", "Customers", new { id = person.Id }, null)</td>
                <td>@person.MembershipType.DiscountRate%</td>
            </tr>
        }
    </tbody>
</table>

